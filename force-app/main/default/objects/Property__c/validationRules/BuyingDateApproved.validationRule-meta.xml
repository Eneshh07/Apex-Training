<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>BuyingDateApproved</fullName>
    <active>true</active>
    <errorConditionFormula>AND( ISPICKVAL( Status__c ,&quot;Approved&quot;) ,
 ISBLANK(  Registration_Date__c  ) 

)</errorConditionFormula>
    <errorDisplayField>Buyin_Date__c</errorDisplayField>
    <errorMessage>Buying Date cannot be blank if Property is Approved</errorMessage>
</ValidationRule>
